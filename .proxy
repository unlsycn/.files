export HOST_IP=$(cat /etc/resolv.conf | grep -oP '(?<=nameserver\ ).*')
export PROXY_PORT=1970

# Global
alias setproxy="export http_proxy=http://${HOST_IP}:${PROXY_PORT}; export https_proxy=${http_proxy}"
alias unsetproxy="unset http_proxy; unset https_proxy; echo 'HTTP Proxy off';"

setproxy

# Git
# git config --global http.proxy ${http_proxy}
# git config --global https.proxy ${https_proxy}# Git
git config --global http.proxy http://${HOST_IP}:${PROXY_PORT}
git config --global https.proxy http://${HOST_IP}:${PROXY_PORT}

# Golang
export GOPROXY=https://proxy.golang.com.cn,direct

# wget 
 sed -i "2c http_proxy=${http_proxy}" ~/.wgetrc
 sed -i "3c https_proxy=${https_proxy}" ~/.wgetrc

